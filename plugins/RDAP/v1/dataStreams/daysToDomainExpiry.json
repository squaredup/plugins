{
    "name": "daysToDomainExpiry",
    "config": {
        "httpMethod": "get",
        "expandInnerObjects": true,
        "endpointPath": "domain/{{domain}}",
        "headers": [
            {
                "key": "accept",
                "value": "*/*"
            }
        ],
        "postRequestScript": "daysToDomainExpiry.js"
    },
    "timeframes": false,
    "displayName": "Days to domain expiry",
    "description": "Number of days before the domain registration expires. Useful for monitoring upcoming expirations.",
    "baseDataSourceName": "httpRequestUnscoped",
    "matches": "none",
    "ui": [
        {
            "name": "domain",
            "label": "Domain (top-level domain name)",
            "placeholder": "mydomain.com",
            "type": "text",
            "validation": {
                "required": true
            }
        }
    ],
    "metadata": [
        {
            "shape": [
                "number",
                {
                    "decimalPlaces": 0
                }
            ],
            "name": "value",
            "displayName": "Days to expiry"
        },
        {
            "pattern": ".*"
        }
    ]
}
