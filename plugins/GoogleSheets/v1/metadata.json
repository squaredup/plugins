{
    "name": "google-sheets",
    "displayName": "Google Sheets",
    "version": "1.0.1",
    "author": {
        "name": "@kieranlangton",
        "type": "community"
    },
    "description": "View and monitor data from Google Sheets",
    "category": "Collaboration",
    "type": "cloud",
    "importNotSupported": true,
    "schemaVersion": "2.0",
    "base": {
        "plugin": "WebAPI",
        "majorVersion": "1",
        "config": {
            "queryArgs": [],
            "headers": [],
            "oauth2SendTokenInParameters": false,
            "oauth2ClientSecret": "{{oauth2ClientSecret}}",
            "oauth2ClientSecretLocationDuringAuth": "body",
            "oauth2AuthUrl": "https://accounts.google.com/o/oauth2/v2/auth",
            "authMode": "oauth2",
            "oauth2GrantType": "authCode",
            "baseUrl": "https://sheets.googleapis.com/v4/spreadsheets",
            "oauth2TokenUrl": "https://oauth2.googleapis.com/token",
            "oauth2ClientId": "{{oauth2ClientId}}",
            "oauth2AuthExtraArgs": [
                {
                    "value": "{{oauth2ClientId}}",
                    "key": "client_id"
                },
                {
                    "value": "code",
                    "key": "response_type"
                },
                {
                    "value": "offline",
                    "key": "access_type"
                },
                {
                    "value": "true",
                    "key": "include_granted_scopes"
                },
                {
                    "value": "consent",
                    "key": "prompt"
                }
            ],
            "oauth2Scope": "https://www.googleapis.com/auth/spreadsheets.readonly https://www.googleapis.com/auth/drive.readonly"
        }
    },
    "links": [
        {
            "category": "documentation",
            "url": "https://github.com/squaredup/plugins/blob/main/plugins/GoogleSheets/v1/docs/README.md",
            "label": "Help adding this plugin"
        },
        {
            "category": "source",
            "url": "https://github.com/squaredup/plugins/tree/main/plugins/GoogleSheets/v1",
            "label": "Repository"
        }
    ]
}
