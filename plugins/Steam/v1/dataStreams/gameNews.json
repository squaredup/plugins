{
    "name": "gameNews",
    "displayName": "Game News",
    "baseDataSourceName": "httpRequestUnscoped",
    "config": {
        "httpMethod": "get",
        "paging": {},
        "expandInnerObjects": true,
        "endpointPath": "/ISteamNews/GetNewsForApp/v2/",
        "getArgs": [
            {
                "key": "appid",
                "value": "{{appid}}"
            },
            {
                "key": "enddate",
                "value": "{{enddate}}",
                "needsEncryption": false
            },
            {
                "key": "count",
                "value": "{{count}}",
                "needsEncryption": false
            }
        ],
        "postRequestScript": "gameNews-post.js",
        "headers": []
    },
    "metadata": [
        {
            "shape": [
                "date",
                {
                    "format": "dd/MM/yyyy hh:mm",
                    "timeZone": "Etc/UTC"
                }
            ],
            "name": "date"
        },
        {
            "pattern": ".*"
        }
    ],
    "timeframes": false,
    "ui": [
        {
            "help": "App ID is a number in the link of the game's store page",
            "name": "appid",
            "label": "App ID",
            "placeholder": "730",
            "title": "App ID",
            "type": "text",
            "validation": {
                "required": true
            }
        },
        {
            "name": "enddate",
            "help": "Retrieve posts earlier than this date (unix epoch timestamp)",
            "label": "End Date",
            "title": "End date",
            "type": "text"
        },
        {
            "help": "Number of posts to show (default 20)",
            "defaultValue": "20",
            "name": "count",
            "label": "Number of posts",
            "placeholder": "20",
            "title": "Number of posts",
            "type": "text"
        }
    ]
}