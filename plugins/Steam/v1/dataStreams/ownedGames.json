{
    "name": "ownedGames",
    "displayName": "Owned Games",
    "baseDataSourceName": "httpRequestUnscoped",
    "config": {
        "httpMethod": "get",
        "paging": {
            "mode": "none"
        },
        "expandInnerObjects": true,
        "endpointPath": "IPlayerService/GetOwnedGames/v1/",
        "getArgs": [
            {
                "key": "include_appinfo",
                "value": "true"
            },
            {
                "key": "include_played_free_games",
                "value": "{{include_played_free_games}}"
            }
        ],
        "postRequestScript": "ownedGames-post.js",
        "headers": []
    },
    "metadata": [
        {
            "shape": [
                "minutes",
                {
                    "decimalPlaces": 2,
                    "formatDuration": true
                }
            ],
            "name": "playtime_deck_forever"
        },
        {
            "shape": [
                "minutes",
                {
                    "decimalPlaces": 2,
                    "formatDuration": true
                }
            ],
            "name": "playtime_forever"
        },
        {
            "shape": [
                "minutes",
                {
                    "decimalPlaces": 2,
                    "formatDuration": true
                }
            ],
            "name": "playtime_linux_forever"
        },
        {
            "shape": [
                "minutes",
                {
                    "decimalPlaces": 2,
                    "formatDuration": true
                }
            ],
            "name": "playtime_windows_forever"
        },
        {
            "shape": [
                "date",
                {
                    "format": "dd/MM/yyyy hh:mm",
                    "timeZone": "Etc/UTC"
                }
            ],
            "name": "rtime_last_played"
        },
        {
            "pattern": ".*"
        }
    ],
    "timeframes": false,
    "ui": [
        {
            "help": "Choose if you want to include free to play games in the list",
            "defaultValue": "true",
            "name": "include_played_free_games",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include free games?",
            "type": "radio",
            "validation": {
                "required": true
            }
        }
    ]
}