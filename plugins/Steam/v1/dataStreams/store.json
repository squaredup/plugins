{
    "name": "store",
    "displayName": "Store",
    "baseDataSourceName": "httpRequestUnscoped",
    "config": {
        "httpMethod": "get",
        "paging": {
            "mode": "none"
        },
        "expandInnerObjects": true,
        "endpointPath": "/IStoreService/GetAppList/v1",
        "getArgs": [
            {
                "key": "include_games",
                "value": "{{include_games}}"
            },
            {
                "key": "include_dlc",
                "value": "{{include_dlc}}"
            },
            {
                "key": "include_software",
                "value": "{{include_software}}"
            },
            {
                "key": "include_videos",
                "value": "{{include_videos}}"
            },
            {
                "key": "include_hardware",
                "value": "{{include_hardware}}"
            },
            {
                "key": "max_results",
                "value": "{{max_results}}"
            }
        ],
        "postRequestScript": "store-post.js",
        "headers": []
    },
    "metadata": [
        {
            "shape": "string",
            "name": "appid"
        },
        {
            "shape": [
                "date",
                {
                    "format": "dd/MM/yyyy hh:mm",
                    "timeZone": "Etc/UTC"
                }
            ],
            "name": "last_modified"
        },
        {
            "pattern": ".*"
        }
    ],
    "timeframes": false,
    "ui": [
        {
            "help": "Do you want to include games in the searches?",
            "defaultValue": "true",
            "name": "include_games",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include Games?",
            "title": "Include Games?",
            "type": "radio",
            "validation": {
                "required": true
            }
        },
        {
            "help": "Do you want to include DLC in the searches?",
            "defaultValue": "false",
            "name": "include_dlc",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include DLC?",
            "title": "Include DLC?",
            "type": "radio",
            "validation": {
                "required": true
            }
        },
        {
            "help": "Do you want to include software in the searches?",
            "defaultValue": "false",
            "name": "include_software",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include Software?",
            "title": "Include Software",
            "type": "radio",
            "validation": {
                "required": true
            }
        },
        {
            "help": "Do you want to include videos in the searches?",
            "defaultValue": "false",
            "name": "include_videos",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include Videos?",
            "title": "Include Videos?",
            "type": "radio",
            "validation": {
                "required": true
            }
        },
        {
            "help": "Do you want to include hardware in the searches?",
            "defaultValue": "false",
            "name": "include_hardware",
            "options": [
                {
                    "value": "true",
                    "label": "Yes"
                },
                {
                    "value": "false",
                    "label": "No"
                }
            ],
            "label": "Include Hardware?",
            "title": "Include Hardware",
            "type": "radio",
            "validation": {
                "required": true
            }
        },
        {
            "name": "max_results",
            "help": "Choose a number of results to show",
            "label": "Number of results",
            "placeholder": "10000",
            "title": "Number of results",
            "type": "text"
        }
    ]
}