{
    "name": "sendgrid",
    "displayName": "Twilio SendGrid",
    "version": "1.0.0",
    "author": {
        "name": "@agoodthing.org.uk",
        "type": "community"
    },
    "description": "Query email send statistics from Twilio SendGrid",
    "category": "SquaredUp Internal",
    "type": "cloud",
    "schemaVersion": "2.0",
    "base": {
        "plugin": "WebAPI",
        "majorVersion": "1",
        "config": {
            "headers": [
                {
                    "value": "Bearer {{apiKey}}",
                    "key": "Authorization"
                }
            ],
            "baseUrl": "https://api.{{region === 'eu' ? 'eu.' : ''}}sendgrid.com/v3"
        }
    }
}