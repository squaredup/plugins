{
    "name": "sendgrid",
    "displayName": "Twilio SendGrid",
    "version": "1.0.0",
    "author": {
        "name": "@agoodthing.org.uk",
        "type": "community"
    },
    "description": "Query email send statistics from Twilio SendGrid.",
    "category": "Utility",
    "type": "cloud",
    "schemaVersion": "2.0",
    "base": {
        "plugin": "WebAPI",
        "majorVersion": "1",
        "config": {
            "headers": [
                {
                    "value": "Bearer {{apiKey}}",
                    "key": "Authorization"
                }
            ],
            "baseUrl": "https://api.{{region === 'eu' ? 'eu.' : ''}}sendgrid.com/v3"
        }
    },
    "links": [
        {
            "category": "documentation",
            "url": "https://github.com/squaredup/plugins/blob/main/plugins/SendGrid/v1/README.md",
            "label": "Help adding this plugin"
        },
        {
            "category": "source",
            "url": "https://github.com/squaredup/plugins/tree/main/plugins/SendGrid/v1",
            "label": "Repository"
        }
    ],
    "screenshots": [
        "https://github.com/squaredup/plugins/blob/main/plugins/SendGrid/v1/screenshots/sendgrid-stats-client.png",
        "https://github.com/squaredup/plugins/blob/main/plugins/SendGrid/v1/screenshots/sendgrid-stats-engagement.png"
    ]
}