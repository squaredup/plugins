[
    {
        "name": "clientId",
        "label": "Client ID",
        "type": "text",
        "help": "Your Spotify App Client ID. [More Info](https://developer.spotify.com/documentation/web-api/tutorials/getting-started#create-an-app)",
        "placeholder": "Enter your Client ID",
        "validation": {
            "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9\\-]{0,61}[a-zA-Z0-9])?$"
        }
    },
    {
        "name": "clientSecret",
        "label": "Client Secret",
        "help": "Your Spotify App Client Secret. [More Info](https://developer.spotify.com/documentation/web-api/tutorials/getting-started#create-an-app)",
        "type": "password",
        "placeholder": "Enter your Client Secret",
        "validation": {
            "pattern": "^[a-zA-Z0-9](?:[a-zA-Z0-9\\-]{0,61}[a-zA-Z0-9])?$"
        }
    },
    {
        "type": "fieldGroup",
        "name": "field",
        "label": "field",
        "visible": {
            "clientId": {
                "type": "regex",
                "pattern": "(.+)"
            },
            "clientSecret": {
                "type": "regex",
                "pattern": "(.+)"
            }
        },
        "fields": [
            {
                "type": "oAuth2",
                "name": "oauth2AuthCodeSignIn",
                "label": "Sign in with Spotify",
                "validation": {
                    "required": true
                }
            }
        ]
    }
]